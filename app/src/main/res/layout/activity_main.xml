<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="220dp"
        android:layout_height="76dp"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ingrese Nombre"
        app:layout_constraintEnd_toEndOf="@+id/btnSaludar"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/btnSaludar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="288dp"
        android:layout_height="72dp"
        android:text="tu saludo saldra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSaludar"
        app:layout_constraintVertical_bias="0.127" />

    <Button
        android:id="@+id/btnSaludar"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Saludar"
        app:layout_constraintEnd_toEndOf="@+id/tvSaludo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/tvSaludo"
        app:layout_constraintTop_toBottomOf="@+id/etNombre" />

</androidx.constraintlayout.widget.ConstraintLayout>

